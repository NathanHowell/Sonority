<Window x:Class="wpf.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="wpf" Height="382" Width="776"
    >
  <DockPanel>
    <TabControl Name="tabControl1" DockPanel.Dock="Left">
      <TabControl.ContentTemplate>
        <DataTemplate>
          <ScrollViewer>
              <ListView ItemsSource="{Binding Path=Queue}" MouseDoubleClick="ListDoubleClick" KeyDown="ListKeyDown">
                <ListView.View>
                  <GridView AllowsColumnReorder="true">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Creator}" Header="Artist" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Res}" Header="Resource" />
                  </GridView>
                </ListView.View>
              </ListView>
          </ScrollViewer>
        </DataTemplate>
      </TabControl.ContentTemplate>
      <TabControl.ItemTemplate>
        <DataTemplate>
          <StackPanel>
            <TextBlock Text="{Binding Path=DeviceProperties.ZoneName}"/>
            <TextBlock Text="{Binding Path=AVTransport.CurrentTrack}"/>
            <TextBlock Text="{Binding Path=AVTransport.NumberOfTracks}"/>
            <Button Content="{Binding Path=AVTransport.TransportState}" Click="ChangeTransportState"/>
          </StackPanel>
        </DataTemplate>
      </TabControl.ItemTemplate>
    </TabControl>
  </DockPanel>
</Window>
