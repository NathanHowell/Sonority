<UserControl x:Class="wpf.VolumeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Expander>
    <Expander.Header>
      <TextBlock>Volume</TextBlock>      
    </Expander.Header>
    <Expander.Content>
      <ListView ItemsSource="{Binding }">
        <ListView.ItemTemplate>
          <DataTemplate>
            <Slider Value="{Binding Mode=OneWay, Path=RenderingControl.Volume[Master]}" Minimum="0" Maximum="100" Width="100" SmallChange="1" LargeChange="5"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </Expander.Content>
  </Expander>
</UserControl>
